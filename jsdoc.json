{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
        "include": [
            "README.md",
            "./src/datapack.js",
            "./src/index.js",
            "./src/index-datapacks.js",
            "./data-packs/languages/datapack-entry-format.js",
            "./data-packs/countries/datapack-entry-format.js"
        ]
    },
    "plugins": ["plugins/markdown"],
    "sourceType": "module",
    "opts": {
        "readme": "./README.md",
        "recurse": true,
        "destination": "./docs",
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "light"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}
